@startuml
skinparam monochrome true
skinparam shadowing false
!theme mono
skinparam classAttributeIconSize 0
namespace transportation {
  ' Inheritance hierarchy
  abstract class Vehicle {
    - id : String
    - currentLocation : Location
    - status : VehicleStatus
    - route : Route
    - sensors : List<Sensor>
    __
    + {abstract} getCapacity() : Integer
    + updateLocation(location : Location) : void
    + getStatus() : VehicleStatus
    + setRoute(route : Route) : void
    + getRoute() : Route
  }
  class RoboTaxi {
    - batteryLevel : Float
    - maxPassengers : Integer
    __
    + getCapacity() : Integer
    + chargeBattery() : void
    + completeTrip() : void
  }
  class RoboShuttle {
    - maxPassengers : Integer
    __
    + getCapacity() : Integer
    + addStop(stop : Location) : void
  }
  ' Composition - Sensors are part of Vehicle
  class Sensor {
    - sensorId : String
    - sensorType : SensorType
    - locationOnVehicle : Location
    __
    + readData() : SensorData
    + calibrate() : void
    + getType() : SensorType
  }
  enum SensorType {
    LIDAR
    CAMERA
    RADAR
    GPS
    IMU
  }
  enum VehicleStatus {
    IDLE
    IN_SERVICE
    EN_ROUTE
    CHARGING
    MAINTENANCE
    OUT_OF_SERVICE
  }
  ' Aggregation - Fleet contains Vehicles
  class Fleet {
    - id : String
    - operatorName : String
    - serviceArea : List<Location>
    - vehicles : List<Vehicle>
    __
    + addVehicle(vehicle : Vehicle) : void
    + removeVehicle(vehicle : Vehicle) : void
    + getAvailableVehicles() : List<Vehicle>
    + dispatchVehicle(pickup : Location, dropoff : Location) : Vehicle
  }
  class Route {
    - id : String
    - waypoints : List<Location>
    __
    + addWaypoint(location : Location) : void
    + optimizeRoute() : void
    + getDistance() : Double
  }
  class Location {
    - latitude : Double
    - longitude : Double
    __
    + distanceTo(other : Location) : Double
  }
  class Person {
    - id : String
    - name : String
    - phoneNumber : String
    - currentVehicle : Vehicle
    __
    + requestRide(pickup : Location, dropoff : Location) : void
    + boardVehicle(vehicle : Vehicle) : void
    + exitVehicle() : void
  }
  ' Relationships
  Vehicle <|-- RoboTaxi
  Vehicle <|-- RoboShuttle
  Vehicle *-- Sensor
  Fleet o-- Vehicle
  Vehicle "0..*" --> "0..1" Route : follows
  Sensor --> SensorType : has type
  Sensor --> Location : mounted at
  Vehicle --> Location : located at
  Vehicle --> VehicleStatus : has status
  Route --> Location : consists of
  Person "0..*" --> "0..1" Vehicle : rides in
}
@enduml